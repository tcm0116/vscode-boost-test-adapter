{
  "name": "boost-test-adapter-debug",
  "version": "2.0.19",
  "displayName": "Boost.Test Explorer with debug",
  "description": "Run or debug your Boost.Test tests in the Sidebar of Visual Studio Code",
  "author": "Nic Newdigate<nicnewdigate@gmail.com>",
  "publisher": "NicNewdigate",
  "license": "MIT",
  "homepage": "https://github.com/newdigate/vscode-boost-test-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/newdigate/vscode-boost-test-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/newdigate/vscode-boost-test-adapter/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "boost",
    "test",
    "testing"
  ],
  "icon": "icon.png",
  "main": "lib/main.js",
  "scripts": {
    "clean": "rimraf lib *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build"
  },
  "dependencies": {
    "async-mutex": "^0.1.4",
    "dotparser": "^1.0.0",
    "tslib": "^1.9.3",
    "vscode-test-adapter-api": "^1.7.0",
    "vscode-test-adapter-util": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "8.9.3",
    "@types/vscode": "1.26.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "engines": {
    "vscode": "^1.26.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "Boost.Test Explorer",
      "properties": {
        "boost-test-adapter.logpanel": {
          "description": "Write diagnotic logs to an output panel.",
          "type": "boolean",
          "scope": "window"
        },
        "boost-test-adapter.logfile": {
          "description": "Write diagnostic logs to the given file.",
          "type": "string",
          "scope": "window"
        },
        "boost-test-adapter.testExecutable": {
          "description": "Relative path to a test executable.",
          "type": "string",
          "scope": "resource"
        },
        "boost-test-adapter.cwd": {
          "description": "Current working directory for test executable.",
          "type": "string",
          "scope": "window"
        },
        "boost-test-adapter.sourcePrefix": {
          "description": "Relative path to prefixes all the source files that output from a test executable.",
          "type": "string",
          "scope": "resource"
        }
      }
    }
  }
}
